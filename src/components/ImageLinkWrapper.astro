---
// Renders a list of ImageLinks. Groups in a flex container
type Props = {
  align?: 'left' | 'center' | 'right';
}
const { align = 'center' }: Props = Astro.props;

const alignStyles = {
  left: 'justify-start',
  center: 'justify-center',
  right: 'justify-end',
}
---
<div class=" mt-3">
  <div class={`flex flex-wrap ${alignStyles[align]} shrink-0 gap-x-4 gap-y-4`}>
    <slot />
  </div>
</div>