---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getEntry, render } from 'astro:content';

// Defines the type of the entry
interface Entry {
  data: {
    title: string;
    description: string;
  }
}

// Fetches the entry using the "docs" collection configuration ./content.config.ts
const entry = await getEntry('docs', 'components');
if (!entry) throw new Error('Entry not found');

const { data: { title, description } } = entry as Entry;
const { Content } = await render(entry);

---

<StarlightPage frontmatter={{ title, description }}>
    <Content/>
    
</StarlightPage>